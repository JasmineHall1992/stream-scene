{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["client/src/components/*"],
      "@utils/*": ["client/src/utils/*"]
    },
    "outDir": "dist",
    "rootDir": "./", 
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./types", "./client/types"]
  },
  "include": ["client/src/**/*", "server/src/**/*", "types/**/*", "server/types", "server/routes", "server/models", "server/middleware", "server/db", "server/config", "server/app.ts", "server/server.ts"],
  "exclude": ["node_modules", "dist"]
}
