{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["client/src/components/*"],
      "@utils/*": ["client/src/utils/*"]
    },
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["client/src", "server/src"],
  "exclude": ["node_modules", "dist"]
}
