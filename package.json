{
  "name": "stream-scene",
  "version": "1.0.0",
  "main": "server/src/server.ts",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "webpack serve --config webpack.config.js --mode development",
    "dev:server": "ts-node-dev --respawn --transpile-only server/src/server.ts",
    "build": "webpack --config webpack.config.js --mode production && tsc",
    "build:server": "tsc",
    "build:client": "webpack --config webpack.config.js --mode production",
    "start": "node dist/server/src/server.js",
    "start:prod": "NODE_ENV=production node dist/server/src/server.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "mysql2": "^3.14.2",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.1.0",
    "@types/sequelize": "^4.28.20",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.6.3",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "style-loader": "^3.3.4",
    "tailwindcss": "^4.1.11",
    "ts-loader": "^9.5.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "webpack": "^5.100.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  }
}
